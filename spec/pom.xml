<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>jakarta.config</groupId>
        <artifactId>jakarta.config</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>jakarta.config-spec</artifactId>
    <name>Jakarta Config Specification</name>
    <description>Jakarta Config :: Specification</description>
    <packaging>pom</packaging>

    <properties>
        <maven.build.timestamp.format>MMMM dd, yyyy</maven.build.timestamp.format>
        <maven.site.skip>true</maven.site.skip>
        <revisiondate>${maven.build.timestamp}</revisiondate>
        <site.output.dir>${project.build.directory}/staging</site.output.dir>
        <spec.version>${project.version}</spec.version>
        <!-- status: DRAFT, BETA, etc., or blank for final -->
        <status>DRAFT</status>
    </properties>

    <build>
        <defaultGoal>package</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <executions>
                    <execution>
                        <id>enforce-versions</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireJavaVersion>
                                    <version>[11,)</version>
                                    <message>You need JDK11 or later</message>
                                </requireJavaVersion>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.asciidoctor</groupId>
                <artifactId>asciidoctor-maven-plugin</artifactId>
                <configuration>
                    <attributes>
                        <revnumber>${spec.version}</revnumber>
                        <revremark>${status}</revremark>
                        <revdate>${revisiondate}</revdate>
                    </attributes>
                    <!--
                        sourceDocumentName commented out for now while the specification is under development/drafting.
                    -->
                    <!-- <sourceDocumentName>01-config-spec.adoc</sourceDocumentName> -->
                    <sourceHighlighter>coderay</sourceHighlighter>
                </configuration>
                <executions>
                    <execution>
                        <id>asciidoc-to-html</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>process-asciidoc</goal>
                        </goals>
                        <configuration>
                            <attributes>
                                <data-uri/>
                                <docinfo>shared</docinfo>
                                <doctype>book</doctype>
                                <icons>font</icons>
                                <idprefix/>
                                <idseparator>-</idseparator>
                                <imagesdir>images</imagesdir>
                                <sectanchors>true</sectanchors>
                                <status>${status}</status>
                                <toc>left</toc>
                            </attributes>
                            <backend>html5</backend>
                            <!--
                                outputFile commented out for now while the specification is under development/drafting.
                            -->
                            <!-- <outputFile>${project.build.directory}/generated-docs/config-spec-${project.version}.html</outputFile> -->
                        </configuration>
                    </execution>
                    <!--
                        PDF generation commented out for now while the specification is under development/drafting.
                    -->
                    <!--
                    <execution>
                        <id>asciidoc-to-pdf</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>process-asciidoc</goal>
                        </goals>
                        <configuration>
                            <attributes>
                                <data-uri/>
